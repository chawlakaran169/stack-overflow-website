<!-- blogs.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Questions</title>
    <!-- Add your CSS link or styles here -->
</head>
<body>
    <h1>All Questions</h1>

    <!-- Navigation bar or back button to home -->
    <a href="/home">Back to Home</a>

    <!-- Loop through questions array and display each question -->
    <% if (questions.length > 0) { %>
        <ul>
            <% questions.forEach(question => { %>
                <li>
                    <h2><%= question.title %></h2>
                    <p><%= question.description %></p>
                    <p>Related: <%= question.related %></p>
                    <!-- Additional information or formatting as needed -->
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No questions found.</p>
    <% } %>

    <!-- Add a form to submit a new question if needed -->
    <!-- Example form -->
    <form action="/blogs" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <br>
        <label for="related">Related:</label>
        <input type="text" id="related" name="related" required>
        <br>
        <button type="submit">Submit Question</button>
    </form>

    <!-- Add your JavaScript scripts or external links here -->
</body>
</html>
